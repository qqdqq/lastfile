@page
@model ThemeParkDatabase.Pages.ParkInfo.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h3>Park Info</h3>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ParkInfomation[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParkInfomation[0].Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParkInfomation[0].State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParkInfomation[0].City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParkInfomation[0].PostalCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParkInfomation[0].Address)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ParkInfomation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>

          
        <td>
            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
        </td>
            
        </tr>
}
    </tbody>
</table>
